<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_guide"
    app:startDestination="@id/welcomeFirst">

    <fragment
        android:id="@+id/welcomeFirst"
        android:name="com.berkedursunoglu.unutmadan.guideactivitys.WelcomeFirst"
        android:label="fragment_welcome_first"
        tools:layout="@layout/fragment_welcome_first" >
        <action
            android:id="@+id/action_welcomeFirst_to_welcomeSecond"
            app:destination="@id/welcomeSecond"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/welcomeSecond"
        android:name="com.berkedursunoglu.unutmadan.guideactivitys.WelcomeSecond"
        android:label="fragment_welcome_second"
        tools:layout="@layout/fragment_welcome_second" >
        <action
            android:id="@+id/action_welcomeSecond_to_welcomeThirt"
            app:destination="@id/welcomeThirt"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/welcomeThirt"
        android:name="com.berkedursunoglu.unutmadan.guideactivitys.WelcomeThirt"
        android:label="fragment_welcome_thirt"
        tools:layout="@layout/fragment_welcome_thirt" />
</navigation>