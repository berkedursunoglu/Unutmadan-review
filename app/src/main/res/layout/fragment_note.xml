<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".notes.NoteFragment"
        android:background="@color/primaryLightColor">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/noteToolbar"
            app:navigationIcon="@drawable/calendarlogotoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Notlar"
            app:titleTextColor="@color/primaryTextColor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/noteRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noteToolbar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/noteAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:tint="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/noteguideimage"
            android:layout_width="224dp"
            android:layout_height="243dp"
            app:layout_constraintBottom_toTopOf="@+id/noteAdd"
            app:layout_constraintEnd_toStartOf="@+id/noteAdd"
            app:srcCompat="@drawable/noteguide" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>